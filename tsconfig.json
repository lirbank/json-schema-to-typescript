{
  "compilerOptions": {
    "declaration": false,
    "lib": ["es2015", "esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "rootDir": "src"
  },
  "exclude": ["example", "node_modules", "test"]
}
